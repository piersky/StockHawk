<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_widget">

    <TextView
        android:id="@+id/tv_widget_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="@dimen/widget_title_text_size"
        android:textColor="@color/colorAccent"
        android:background="@color/colorPrimaryDark"
        android:padding="@dimen/widget_padding"/>

    <FrameLayout
        android:id="@+id/widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryLight">

        <ListView
            android:id="@+id/widget_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/widget_padding"
            android:contentDescription="@string/widget_list_description"/>

        <TextView
            android:id="@+id/tv_widget_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceLarge"
            android:gravity="center"
            android:text="@string/widget_empty_list"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/colorAccent"/>
    </FrameLayout>

</LinearLayout>